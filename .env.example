# Database backend: sqlite or mysql
DB_BACKEND=sqlite

# SQLite configuration
DB_SQLITE_PATH=./resilience.db

# MySQL configuration (used when DB_BACKEND=mysql)
DB_MYSQL_HOST=localhost
DB_MYSQL_PORT=3306
DB_MYSQL_USER=resilience_user
DB_MYSQL_PASSWORD=your_password_here
DB_MYSQL_DATABASE=resilience
DB_MYSQL_CHARSET=utf8mb4

# Optional connection tuning
DB_POOL_PRE_PING=true
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Application metadata
APP_TITLE=Operational Resilience Maturity Assessment
APP_ENVIRONMENT=development
APP_DEBUG=false
